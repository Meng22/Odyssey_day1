<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingBottom="10dp">

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/chk_item" android:layout_marginRight="10dp"
    />
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lyre"
            android:id="@+id/img_item" android:layout_marginRight="10dp" android:scaleType="fitXY"/>
    <TextView
            android:text="里拉琴 "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/tv_itemname" android:layout_weight="1"
            android:textSize="30sp" android:textColor="#DCFFFFFF"/>
</LinearLayout>